@model IEnumerable<Leave>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    @foreach (var leave in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@leave.LeaveType</h5>
                    <h6 class="card-subtitle text-muted">@leave.Id</h6>
                    <p class="card-text">@leave.Reason</p>
                    <p class="card-text">
                        From: @leave.StartDateLeave.ToShortDateString() 
                        To: @leave.EndDateLeave.ToShortDateString()
                    </p>
                </div>
            </div>
        </div>
    }
</div>

